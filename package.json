{
  "name": "blend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "commit": "git-cz",
    "coverage": "cat ./coverage/lcov.info | codecov",
    "prebuild": "rimraf -rf ./dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "rollup -c rollup.config.js",
    "build:umd": "rollup -c rollup.config.umd.js",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "test:watch": "cross-env NODE_ENV=test mocha --watch",
    "validate": "npm-run-all --parallel test build",
    "release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "Matt B",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.1",
    "codecov": "^2.3.0",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.5",
    "cz-conventional-changelog": "^2.0.0",
    "ghooks": "^2.0.0",
    "mocha": "^3.5.0",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.1",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-plugin-uglify-es": "0.0.1",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run validate",
      "commit-msg": "validate-commit-msg"
    }
  },
  "nyc": {
    "check-coverage": true,
    "banches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "instrument": false,
    "sourceMap": false,
    "require": [
      "babel-register"
    ],
    "include": [
      "src"
    ]
  },
  "dependencies": {
    "semantic-release": "^7.0.2"
  }
}
